{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Full-stack chat application",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "build": "npm run install:all && npm run build --prefix frontend && mv frontend/build frontend/public",
    "start": "npm run start --prefix backend",
    "dev": "concurrently \"npm start --prefix backend\" \"npm start --prefix frontend\"",
    "heroku-postbuild": "npm run build"
  },
  "keywords": ["chat", "mern", "fullstack"],
  "author": "Harry",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.0"
  }
}
